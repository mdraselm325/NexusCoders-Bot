module.exports = {
    name: 'Prefix',
    description: 'Checks prefix on bot system ğŸ˜ƒ',
    usage: '!prefix <required> [optional]',
    category: 'general',
    aliases: ['pre', 'p'],
    cooldown: 5,
    adminOnly: false,
    ownerOnly: false,
    async execute(sock, message, args) {
        const prefix = '!' // Default prefix
        const groupSettings = await sock.groupMetadata(message.key.remoteJid);
        const groupPrefix = groupSettings?.settings?.prefix || prefix;

        const response = `ğŸ¥system prefix: ${prefix}, ğŸ›¸current Prefix: ${groupPrefix}`;
        await sock.sendMessage(message.key.remoteJid, {
            text: response
        });
    }
};
